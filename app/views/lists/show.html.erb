<div class="container">
  <div class="d-flex justify-content-between align-items-start mb-5">
    <h1><%= @list.name %> list</h1>
    <%= link_to "Bookmark a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
  <% @bookmarks.each do |bookmark| %>
    <div>
      <h2><i class="fa-regular fa-bookmark fs-4"></i>   <%= bookmark.movie.title %></h2>
      <p><%= bookmark.comment %>
        <%= link_to "delete comment", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Really Delete Bookmark?' }  %>
      </p>
    </div>
  <% end %>
  <%= link_to "Back to Lists", lists_path(@lists), class: "btn btn-info" %>
</div>
