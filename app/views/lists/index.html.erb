<div class="container">
  <div class="d-flex justify-content-between align-items-start mb-5">
    <h1>Lists wut</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
  </div>
  <div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
          <div class="p-3"><%= list.name %></div>
          <div class="position-absolute bottom-0 end-0 pe-1">
            <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Really Delete List?' } do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
          <%= link_to "", list_path(list), class: "position-absolute top-0 w-100 h-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
