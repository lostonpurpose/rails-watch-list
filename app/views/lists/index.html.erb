<div class="container">
  <div class="d-flex justify-content-between align-items-start mb-5">
    <h1>Lists wut</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
  </div>
  <div>
    <% @lists.each do |list| %>
      <div class="d-flex justify-content-between">
        <h2>
          <%= link_to list.name, list_path(list) %></h2>
        <p> <%= link_to "Delete List", list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Really Delete List?' }  %>
        </p>
      </div>
    <% end %>
  </div>
</div>