<div class="container">
  <div class="d-flex justify-content-between align-items-start mb-5">
    <h1>Lists wut</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
  </div>
  <div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photo.key)%>)">
          <%= list.name %>
          <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Really Delete List?' } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
        <div class="d-flex justify-content-between">
          <p>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
